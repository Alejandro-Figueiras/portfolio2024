---
import Tag, { type TagName } from "./Tag.astro"

const {title, img, descripcion, stack = [] as TagName[]} = Astro.props
---
<div class="grid grid-cols-2 gap-16">
  <div class="">
    <div class="shadow-xl overflow-clip rounded-xl lg:border lg:border-gray-800/80">
      <img src={img} alt={title} class="w-full h-56 transition duration-500 sm:h-full md:scale-110 md:hover:scale-105">
    </div>
  </div>
  <div class="flex flex-col w-full">
    <h3 class="text-2xl font-bold text-gray-800/80">{title}</h3>
    <div class="flex flex-row gap-2">{stack.map((tag: TagName) => <Tag tag={tag}/>)}</div>
    <div>{descripcion}</div>
  </div>
</div>